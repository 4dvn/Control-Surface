{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make & Test",
            "command": "cd build && make -j$(nproc) && make test",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build examples",
            "command": "./build-arduino.sh $[$(nproc) * 2]",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            }
        }
    ]
}